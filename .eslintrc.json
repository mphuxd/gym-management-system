{
  "plugins": [
    "jsx-a11y",
    "jest-dom",
    "jest"
  ],
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "prettier"
  ],
  "rules": {
    "linebreak-style": "off",
    "react/prop-types": "off", //reenable when I convert to TS
    "react/jsx-filename-extension": "off",
    "react/jsx-props-no-spreading": "off",
    "import/prefer-default-export": "off"
  },
  "env": {
    "jest/globals": true
  }
}